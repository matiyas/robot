# Environment variables for Robot Tank Docker deployment
# Copy this file to .env and customize as needed

# Application Environment
# Options: development, production
RACK_ENV=production

# Server Port
# Development default: 4567
# Production default: 80
PORT=4567

# Host Binding
# Use 0.0.0.0 to accept connections from any IP
HOST=0.0.0.0

# Camera Stream URL
# Update with your Raspberry Pi IP address
CAMERA_URL=http://localhost:8081/stream

# Movement Timeouts (milliseconds)
MOVEMENT_TIMEOUT=5000
TURRET_TIMEOUT=2000

# Logging Level
# Options: debug, info, warn, error
LOG_LEVEL=info

# Authentication (future feature)
AUTH_ENABLED=false

# Puma Configuration
WEB_CONCURRENCY=1
RAILS_MAX_THREADS=5

# Docker Configuration
COMPOSE_PROJECT_NAME=robot-tank
COMPOSE_FILE=docker-compose.yml
